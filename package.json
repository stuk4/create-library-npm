{
  "name": "create-library-npm",
  "version": "1.0.0",
  "description": "A tool to quickly start a npm library project",
  "bin": {
    "create-library-npm": "./dist/index.js",
    "cln": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "rimraf dist && tsc --project tsconfig.build.json",
    "install-cli": "tsc --project tsconfig.build.json && npm i -g",
    "uninstall-cli": "npm uninstall create-library-npm -g"
  },
  "keywords": [
    "create-library",
    "create-npm-library",
    "create library",
    "npm",
    "library",
    "cli",
    "typescript"
  ],
  "author": "Bastian Perez",
  "license": "MIT",
  "devDependencies": {
    "@types/figlet": "^1.5.5",
    "@types/node": "^18.14.5",
    "@types/prompts": "^2.4.2",
    "colors": "^1.4.0",
    "commander": "^10.0.0",
    "figlet": "^1.5.2",
    "prompts": "^2.4.2",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
